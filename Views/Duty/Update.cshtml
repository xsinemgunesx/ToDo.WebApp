@model Duty
<div class="container pt-5">
	<div class="row">
		<div class="col-md-6">
			<h3>Görev Güncelle</h3>
			<form asp-action="Update" method="post">
				<input type="hidden" asp-for="Id" />
				<div class="form-group">
					<label asp-for="Name" class="form-label">Görev *</label>
					<input asp-for="Name" type="text" class="form-control">
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="priorityLevel">Öncelik Durumu</label><br />
					<input type="range" asp-for="priorityLevel" list="markers" />

					<datalist id="markers">
						<option value="0"></option>
						<option value="25"></option>
						<option value="50"></option>
						<option value="75"></option>
						<option value="100"></option>
					</datalist>
				</div>
				<div class="form-group">
					<label asp-for="Category">Kategori </label>
					<input asp-for="Category" type="text" class="form-control" />
				</div>
				

				<div class="form-group pt-3">
					<button type="submit" class="btn btn-warning"><i class="bi bi-save"></i>Kaydet</button>
					<a href="/Duty/Index" class="btn btn-primary"><i class="bi bi-list"></i>Listele</a>
				</div>
			</form>

		</div>
	</div>
</div>