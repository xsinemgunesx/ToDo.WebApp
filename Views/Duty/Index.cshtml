@model IEnumerable<Duty>

<div class="container pt-3">
	<div class="row">
		<div class="col-md-12">
			<h3>Kullanıcılar</h3>
			<table class="table table-striped table-bordered table-dark">
				<thead>
					<tr>
						<th>Görev İsmi</th>
						<th>Görev Başlangıç Tarihi</th>
						<th>Kategori</th>
						<th>Öncelik Durumu</th>
						<th>-</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.Name</td>
							<td>@item.dutyDate</td>
							<td>@item.Category</td>
							<td>@item.priorityLevel</td>
							<td>
								<a class="btn btn-success" href="/Duty/Update?id=@item.Id"><i class="bi bi-pen"></i></a>
								<a class="btn btn-danger"
								   onclick="return window.confirm('Are you sure?')"
								   href="/Duty/Delete?id=@item.Id"><i class="bi bi-trash"></i></a>
							</td>
						</tr>
					}
				</tbody>
			</table>
			<div class="row">
				<div class="col-md-12">
					<a class="btn btn-dark" href="/Duty/Create">Ekle +</a>
				</div>
			</div>
		</div>
	</div>
</div>