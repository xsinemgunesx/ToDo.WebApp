@model IEnumerable<User>

<div class="container pt-3">
	<div class="row">
		<div class ="col-md-12">
			<h3>Kullanıcılar</h3>
			<table class="table table-striped table-bordered table-dark">
				<thead>
					<tr>
						<th>Kullanıcı İsmi</th>
						<th>Email</th>
						<th>Katılım Tarihi</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach(var item in Model)
					{
						<tr>
							<td>@item.Name</td>
							<td>@item.Email</td>
							<td>@item.DateOnly</td>
							<td>
								<a class="btn btn-success" href="/User/Update?id=@item.Id"><i class="bi bi-pen"></i></a>
								<a class="btn btn-danger" 
								onclick="return window.confirm('Are you sure?')"
								   href="/User/Delete?id=@item.Id"><i class="bi bi-trash"></i></a>
							</td>
						</tr>
					}
				</tbody>
			</table>
			<div class="row">
				<div class="col-md-12">
					<a class="btn btn-dark" href="/User/Create">Ekle +</a>
				</div>
			</div>
		</div>
	</div>
</div>
