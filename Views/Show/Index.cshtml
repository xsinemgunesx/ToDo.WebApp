@model IEnumerable<Show>
<div class="container pt-4">
	<div class="row">
		<div class="col-md-17">
			<h2>To-Do</h2>
			<table class="table">
				<thead>
					<tr>
						<th scope="col">Kullanıcı</th>
						<th scope="col">Görev İsmi</th>
						<th scope="col">Kategori Adı</th>
						<th scope="col">Görev Başlangıç</th>
						<th scope="col">Kullanıcı Giriş</th>
						<th scope="col">Durum</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.UserName</td>
							<td>@item.DutyName</td>
							<td>@item.Category</td>
							<td>@item.DutyDate</td>
							<td>@item.UserDate</td>
							<td>@item.Status</td>
							<td>@item.Priority</td>

							<td>
								<a class="btn btn-success" href="/Show/Update?id=@item.Id"><i class="bi bi-pen"></i></a>
								<a class="btn btn-danger"
								   onclick="return window.confirm('Are you sure?')"
								   href="/Show/Delete?id=@item.Id"><i class="bi bi-trash"></i></a>
							</td>
						</tr>
					}
				</tbody>
			</table>
			<div class="row">
				<div class="col-md-12">
					<a class="btn btn-dark" href="/Show/Add">Ekle +</a>
				</div>
			</div>
		</div>
	</div>

